<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ryan.mapper.MemberMapper">
	
	<!-- 회원가입 -->
	<insert id="memberSignUp">
		INSERT INTO member VALUES(
		#{member_id},
		#{member_pw},
		#{member_nicm_name},
		#{member_zipcode},
		#{member_address},
		#{member_daddress],
		#{member_tel},
		#{member_sub},
		#{member_admin}
		)
	</insert>
	
	<!-- 이메일, 닉네임 중복체크-->
	
	<select id="signUpCheck" resultType="int">
		SELECT * FROM member 
		<choose>
			<when test="memberId != null">
				WHERE member_id = #{member_Id}
			</when>
			<when test="memberNickNmae != null">
				WHERE member_nick_name = #{member_nicm_name}
			</when>
		</choose>
	</select>
	
</mapper>
